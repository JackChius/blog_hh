.post-body {
  font-family: $font-family-posts;
  word-wrap();

  +desktop-large() {
    font-size: $font-size-large;
  }

  span.exturl .fa {
    font-size: $font-size-small;
    margin-left: 4px;
  }

  .image-caption, .figure .caption {
    color: $grey-dark;
    font-size: $font-size-small;
    font-weight: bold;
    line-height: 1;
    margin: -20px auto 15px;
    text-align: center;
  }
}

// 文章图文并排定制
.post-body .head_img a.fancybox {
  border-bottom: none;
  flex: 1 2 auto;
   +mobile-small() {
     flex: 1 1 40%;
   }
  }
.post-body .head_img span.head_img_desp {
    flex:1 1 100%;
    position: relative;
    top: 20px;
    font-size:18px;
    +mobile-small() {
        top: -8px;
        font-size: 13px;        
   }
   +mobile(){
      top: -8px;
      font-size: 13px;        
   }
   +desktop-init(){
      top: 0px;
      font-size: 15px;      
   }
   +desktop(){
      top: 5px;
      font-size: 18px;        
   }
  }

.post-sticky-flag {
  display: inline-block;
  transform: rotate(30deg);
}

.post-button {
  margin-top: 40px;
  text-align: center;
}

.use-motion {
  if (hexo-config('motion.transition.post_block')) {
    .post-block, .pagination, .comments {
      opacity: 0;
    }
  }

  if (hexo-config('motion.transition.post_header')) {
    .post-header {
      opacity: 0;
    }
  }

  if (hexo-config('motion.transition.post_body')) {
    .post-body {
      opacity: 0;
    }
  }

  if (hexo-config('motion.transition.coll_header')) {
    .collection-header {
      opacity: 0;
    }
  }
}

@import 'post-collapse';
@import 'post-eof';
@import 'post-expand';
@import 'post-gallery';
@import 'post-header';
@import 'post-nav';
@import 'post-rtl';
@import 'post-tags';
@import 'post-widgets';
@import 'post-reward';

@import 'post-copyright' if (hexo-config('creative_commons.post'));
